{
  "name": "@matfire/adonis-simple-admin",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "node": ">=18.16.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matfire/adonis-simple-admin"
  },
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests",
    "!build/example"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js",
    "./simple_admin_provider": "./build/providers/simple_admin_provider.js"
  },
  "scripts": {
    "build": "npm run compile",
    "clean": "del-cli build",
    "compile": "npm run clean && tsc",
    "copy:views": "copyfiles \"resources/**/**/*.edge\" build",
    "copy:templates": "copyfiles \"stubs/**/**/*.stub\" build",
    "copy:css": "copyfiles \"resources/css**/*.css\" build",
    "tailwind:build": "npx tailwindcss build -i resources/css/app.css -o build/resources/css/app.css",
    "rollup:build": "rollup --config rollup.config.mjs",
    "format": "prettier --write .",
    "lint": "eslint . --ext=.ts",
    "postcompile": "npm run copy:views && npm run copy:templates && npm run copy:css && npm run tailwind:build && npm run rollup:build",
    "precompile": "npm run lint",
    "prepublishOnly": "npm run build",
    "pretest": "npm run lint",
    "typecheck": "tsc --noEmit",
    "version": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/assembler": "^7.2.3",
    "@adonisjs/core": "^6.3.1",
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/lucid": "^20.3.1",
    "@adonisjs/prettier-config": "^1.3.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@japa/assert": "^2.1.0",
    "@japa/runner": "^3.1.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@swc/core": "^1.4.6",
    "@types/node": "^20.11.25",
    "alpinejs": "^3.13.7",
    "c8": "^9.1.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "edge.js": "^6.0.1",
    "eslint": "^8.57.0",
    "np": "^10.0.0",
    "prettier": "^3.2.5",
    "rollup": "^4.13.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2",
    "unpoly": "^3.7.3"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0",
    "@adonisjs/lucid": "^20.3.1",
    "edge.js": "^6.0.1"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "master",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package",
    "ignorePatterns": [
      "build",
      "node_modules",
      "example"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
